@model List<Projeto>
@{
    ViewData["Title"] = "Portfólio";
}

<!--TODOS PROJETOS-->
<section class="meus-projetos container">
    @if(Model != null){
        @if(Model.Count > 0){
            <h2>Todos os projetos</h2>
            <div class="row" style="margin-bottom: 20px;">
                @foreach(Projeto projeto in Model){
                    <div class="col-12 col-md">
                        <div class="card" style="margin-bottom: 20px;">
                            <img src="~/img/prints/@projeto.imagem" class="card-img-top" alt="@projeto.alternativo">
                            <div class="card-body">
                                <h5 class="card-title">@projeto.nome @if(ViewBag.logged){ <span>- <a href="~/Home/RemoverProjeto?id=@projeto.id">Remover</a></span> }</h5>
                                <p class="card-text">@projeto.descricao</p>
                                <a href="@projeto.url_project" class="btn btn-primary">Ver projeto</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="col-12 col-md">
        </div>
        }else{
            <h2>Sem projetos disponíveis no momento</h2>
        }
        @if(ViewBag.logged){
            <div class="grid-16">
                <h3><a href="~/Home/NovoProjeto">Novo projeto</a></h3>
            </div>
        }
    }else{
        <h2>Sem projetos disponíveis no momento</h2>
    }
</section>